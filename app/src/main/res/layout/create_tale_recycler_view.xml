<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_tale_recycler_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/create_tale_recycler_view_sence_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="동화 장면 1"/>
    <ImageView
        android:id="@+id/create_tale_recycler_view_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/btn_plus"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/create_tale_recycler_view_get_voice_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="음성 가져오기"/>
    </LinearLayout>
</LinearLayout>